<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_feedback"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="10dp"
        style="@style/Kanshu.Light.TextView.Thin"
        android:gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/dialog_feedback_option_1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_emoticon_sad_grey600_48dp"/>
         <ImageView
             android:id="@+id/dialog_feedback_option_2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
             android:src="@drawable/ic_emoticon_neutral_grey600_48dp"/>
        <ImageView
            android:id="@+id/dialog_feedback_option_3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_emoticon_happy_grey600_48dp"/>
    </LinearLayout>
</LinearLayout>