<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:padding="5dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:id="@+id/answer_id"
    android:textSize="24sp"
    android:textColor="#000000"
    android:text="teee"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answer_text"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginLeft="75dp"
        android:layout_alignBaseline="@+id/answer_id"
        android:text="ffff"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:src="@drawable/ic_answer_correct"
        android:id="@+id/right_answer"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/answer_id"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:src="@drawable/ic_answer_incorrect"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:id="@+id/wrong_answer"
        android:layout_alignBottom="@+id/answer_id"
        android:visibility="invisible"/>
</RelativeLayout>